<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginTop="24dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMerchant"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:src="@drawable/example_asdp"
                android:scaleType="centerCrop"
                />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"/>
            
            <id.dtech.cgo.CustomView.MyTextView
                android:id="@+id/txtMerchantName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ASDP"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                app:myFontStyle="nunito_sans_reguler"
                />

            <id.dtech.cgo.CustomView.MyTextView
                android:id="@+id/txtClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Economy"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                app:myFontStyle="nunito_sans_reguler"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_blue_circle"
                    />

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="45dp"
                   android:src="@drawable/background_dashline_vertical"
                    android:layout_gravity="center_horizontal"
                   />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_gray_blankcircle"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <id.dtech.cgo.CustomView.MyTextView
                        android:id="@+id/txtDepartureTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:50"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:myFontStyle="nunito_sans_bold"
                        />

                    <Space
                        android:layout_width="24dp"
                        android:layout_height="match_parent"/>
                    
                    <id.dtech.cgo.CustomView.MyTextView
                        android:id="@+id/txtDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanur Harbour"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:myFontStyle="nunito_sans_reguler"
                        />

                </LinearLayout>

                <id.dtech.cgo.CustomView.MyTextView
                    android:id="@+id/txtDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="1h 30m"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:myFontStyle="nunito_sans_reguler"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <id.dtech.cgo.CustomView.MyTextView
                        android:id="@+id/txtArrivalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:20"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:myFontStyle="nunito_sans_bold"
                        />

                    <Space
                        android:layout_width="24dp"
                        android:layout_height="match_parent"/>

                    <id.dtech.cgo.CustomView.MyTextView
                        android:id="@+id/txtArrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nusa Penida"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:myFontStyle="nunito_sans_reguler"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <id.dtech.cgo.CustomView.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textSize="16sp"
                    android:textColor="@color/text10"
                    app:myFontStyle="nunito_sans_reguler"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/divider_color"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <id.dtech.cgo.CustomView.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adult"
                android:textSize="14sp"
                app:myFontStyle="nunito_sans_reguler"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <id.dtech.cgo.CustomView.MyTextView
                    android:id="@+id/txtAdultPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 430.000"
                    android:textSize="16sp"
                    app:myFontStyle="nunito_sans_bold"
                    android:textColor="@color/bottom_text_selected"
                    />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>

                <id.dtech.cgo.CustomView.MyTextView
                    android:id="@+id/txtAdultPax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ pax"
                    android:textSize="14sp"
                    app:myFontStyle="nunito_sans_reguler"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <id.dtech.cgo.CustomView.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children"
                android:textSize="14sp"
                app:myFontStyle="nunito_sans_reguler"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <id.dtech.cgo.CustomView.MyTextView
                    android:id="@+id/txtChildrenPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 230.000"
                    android:textSize="16sp"
                    app:myFontStyle="nunito_sans_bold"
                    android:textColor="@color/bottom_text_selected"
                    />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>

                <id.dtech.cgo.CustomView.MyTextView
                    android:id="@+id/txtChildrenPax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ pax"
                    android:textSize="14sp"
                    app:myFontStyle="nunito_sans_reguler"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>