<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.FragmentExplore">

    <LinearLayout
        android:id="@+id/linearHeader2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/background_explore_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_cgo_blue"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_bell"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="24dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearExperience2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_snorkeling"
                        android:layout_gravity="center_vertical"
                        />

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/experience"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/profile_name"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_color"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    />

                <LinearLayout
                    android:id="@+id/linearTransportation2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_ship"
                        android:layout_gravity="center_vertical"
                        />

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transportation"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/profile_name"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

<androidx.core.widget.NestedScrollView
    android:id="@+id/myNestedScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearHeader1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:background="@drawable/background_explore_header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cgo_blue"
                    />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_bell"
                   android:layout_alignParentRight="true"
                    android:visibility="gone"
                    />

            </RelativeLayout>

            <id.dtech.cgo.CustomView.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_sea"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textSize="18sp"
                android:textColor="@color/profile_name"
                app:myFontStyle="rubik_medium"
                />

            <id.dtech.cgo.CustomView.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_sea2"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textSize="16sp"
                android:textColor="@color/profile_name"
                app:myFontStyle="nunito_sans_reguler"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearExperience"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_snorkeling"
                            android:layout_gravity="center_vertical"
                            />

                        <Space
                            android:layout_width="16dp"
                            android:layout_height="match_parent"/>
                        
                        <id.dtech.cgo.CustomView.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/experience"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/profile_name"
                            app:myFontStyle="rubik_medium"
                            />
                        
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_color"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        />

                    <LinearLayout
                        android:id="@+id/linearTransportation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_ship"
                            android:layout_gravity="center_vertical"
                            />

                        <Space
                            android:layout_width="16dp"
                            android:layout_height="match_parent"/>

                        <id.dtech.cgo.CustomView.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transportation"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/profile_name"
                            app:myFontStyle="rubik_medium"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLogin"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/background_notlogin">

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"/>

            <id.dtech.cgo.CustomView.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/benefits"
                android:textColor="@color/text1"
                android:textSize="14sp"
                app:myFontStyle="nunito_sans_reguler"
                />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile_blue"
                android:layout_gravity="center_vertical"
                />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <id.dtech.cgo.CustomView.MyTextView
            android:id="@+id/txtChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_favorite_ctivity"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textSize="16sp"
            android:textColor="@color/profile_name"
            app:myFontStyle="rubik_medium"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearDiving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:src="@drawable/ic_diving"
                        />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>
                    
                    <id.dtech.cgo.CustomView.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diving"
                        android:textSize="14sp"
                        app:myFontStyle="nunito_sans_reguler"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearFishing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:src="@drawable/ic_fishing"
                        />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>

                    <id.dtech.cgo.CustomView.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fishing"
                        android:textSize="14sp"
                        app:myFontStyle="nunito_sans_reguler"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSnorkeling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:src="@drawable/ic_snorkelings"
                        />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>

                    <id.dtech.cgo.CustomView.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/snorkeling"
                        android:textSize="14sp"
                        app:myFontStyle="nunito_sans_reguler"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSailing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:src="@drawable/ic_sailing"
                        />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>

                    <id.dtech.cgo.CustomView.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sailing"
                        android:textSize="14sp"
                        app:myFontStyle="nunito_sans_reguler"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearTour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:src="@drawable/ic_tour"
                        />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>

                    <id.dtech.cgo.CustomView.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tour"
                        android:textSize="14sp"
                        app:myFontStyle="nunito_sans_reguler"
                        />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp">

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerTripReference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_animation_duration="1200"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="350dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:background="@drawable/linear_rounded" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:background="@drawable/rounded_view"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:background="@drawable/rounded_view"
                                    android:layout_marginTop="24dp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="350dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:background="@drawable/linear_rounded" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:background="@drawable/rounded_view"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:background="@drawable/rounded_view"
                                    android:layout_marginTop="24dp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:overScrollMode="never"
                android:visibility="gone"
                />

        </RelativeLayout>

        <id.dtech.cgo.CustomView.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/promo"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:myFontStyle="rubik_medium"
            />

        <id.dtech.cgo.CustomView.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/promo_content"
            android:textSize="14sp"
            android:textColor="@color/profile_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            app:myFontStyle="nunito_sans_reguler"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_animation_duration="1200"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:background="@drawable/linear_rounded" />

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:background="@drawable/linear_rounded" />

                    </LinearLayout>

                </HorizontalScrollView>

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:overScrollMode="never"
                android:visibility="gone"
                />

        </RelativeLayout>

        <id.dtech.cgo.CustomView.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inpiration"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:myFontStyle="rubik_medium"
            />

        <id.dtech.cgo.CustomView.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inpiration_content"
            android:textSize="14sp"
            android:textColor="@color/profile_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            app:myFontStyle="nunito_sans_reguler"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerInspiration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_animation_duration="1200"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:id="@+id/insPirationNestedScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="350dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:background="@drawable/linear_rounded" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:background="@drawable/rounded_view"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:background="@drawable/rounded_view"
                                    android:layout_marginTop="24dp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="350dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:background="@drawable/linear_rounded" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:background="@drawable/rounded_view"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:background="@drawable/rounded_view"
                                    android:layout_marginTop="24dp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInspiration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:overScrollMode="never"
                android:visibility="gone"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

</LinearLayout>