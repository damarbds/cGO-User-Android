<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgBoarding"
        android:layout_width="wrap_content"
        android:layout_height="277dp"
        android:src="@drawable/onboarding_image_1"
        android:layout_centerInParent="true"
        />

</RelativeLayout>

<id.dtech.cgo.CustomView.MyTextView
    android:id="@+id/txtTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/boarding_word_1"
    android:textSize="20sp"
    android:textColor="@color/profile_name"
    android:layout_marginTop="24dp"
    android:gravity="center"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:lineSpacingExtra="8dp"
    app:myFontStyle="rubik_medium"
    />

<id.dtech.cgo.CustomView.MyTextView
    android:id="@+id/txtContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/boarding_content_1"
    android:layout_margin="24dp"
    android:textSize="16sp"
    android:gravity="center"
    android:lineSpacingExtra="4dp"
    app:myFontStyle="nunito_sans_reguler"
    />

</LinearLayout>