<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/boarding_background"
    tools:context=".View.ActivityBoarding">

<androidx.viewpager.widget.ViewPager
    android:id="@+id/boardingPager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:overScrollMode="never"
    />

    <com.rd.PageIndicatorView
        android:id="@+id/pagerIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:piv_selectedColor="@color/pin_selected_color"
        app:piv_unselectedColor="@color/pin_unselected_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        app:piv_radius="5dp"
        />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="24dp"
        android:text="@string/next"
        android:background="@drawable/background_bluerounded"
        android:textColor="@color/white"

        />

</LinearLayout>