<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.ActivityTransportationResult">

<androidx.cardview.widget.CardView
    android:id="@+id/cardHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="24dp"
           >

           <ImageView
               android:id="@+id/ivBack"
               android:layout_width="28dp"
               android:layout_height="28dp"
               android:src="@drawable/left_arrow"
               />

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginLeft="12dp"
               android:layout_marginTop="3dp"
               android:orientation="vertical">

               <id.dtech.cgo.CustomView.MyTextView
                   android:id="@+id/txtTitle"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/select_departure"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   app:myFontStyle="nunito_sans_semibold"
                   />

               <Space
                   android:layout_width="match_parent"
                   android:layout_height="12dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtOrigin"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sanur Harbour"
                       android:textColor="@color/profile_name"
                       android:textSize="13sp"
                       app:myFontStyle="nunito_sans_reguler"
                       />

                   <Space
                       android:layout_width="8dp"
                       android:layout_height="match_parent"/>

                   <ImageView
                       android:id="@+id/imgReturn"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/ic_right_gray"
                       />

                   <Space
                       android:layout_width="8dp"
                       android:layout_height="match_parent"/>

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtDestination"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Labuan Bajo"
                       android:textColor="@color/profile_name"
                       android:textSize="13sp"
                       app:myFontStyle="nunito_sans_reguler"
                       />

               </LinearLayout>

               <Space
                   android:layout_width="match_parent"
                   android:layout_height="8dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtStrDate"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center_vertical"
                       android:text="9 Feb"
                       android:textSize="13sp"
                       app:myFontStyle="nunito_sans_reguler"
                       android:textColor="#292727" />

                   <Space
                       android:layout_width="8dp"
                       android:layout_height="match_parent"/>

                   <ImageView
                       android:layout_width="5dp"
                       android:layout_height="5dp"
                       android:src="@drawable/ic_ellipse"
                       android:layout_gravity="center_vertical"
                       />

                   <Space
                       android:layout_width="8dp"
                       android:layout_height="match_parent"/>

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtGuest"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="3 Adult(s), 1 Children"
                       android:layout_gravity="center_vertical"
                       android:textColor="#292727"
                       android:textSize="13sp"
                       app:myFontStyle="nunito_sans_reguler"
                       />

                   <Space
                       android:layout_width="8dp"
                       android:layout_height="match_parent"/>

                   <ImageView
                       android:layout_width="5dp"
                       android:layout_height="5dp"
                       android:src="@drawable/ic_ellipse"
                       android:layout_gravity="center_vertical"
                       />

                   <Space
                       android:layout_width="8dp"
                       android:layout_height="match_parent"/>

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtClass"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Economy"
                       android:layout_gravity="center_vertical"
                       android:textSize="13sp"
                       app:myFontStyle="nunito_sans_reguler"
                       android:textColor="#292727"
                       />

               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:id="@+id/linearReturn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#EFF3FF"
           android:visibility="gone"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingBottom="12dp"
               android:paddingTop="12dp"
               android:paddingLeft="24dp"
               android:paddingRight="24dp"
               android:layout_weight="1">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <id.dtech.cgo.CustomView.MyTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Departure"
                       android:textSize="13sp"
                       android:textColor="#1E1E1E"
                       app:myFontStyle="nunito_sans_semibold"
                       />

                   <Space
                       android:layout_width="match_parent"
                       android:layout_height="8dp"/>

                   <id.dtech.cgo.CustomView.MyTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Adult"
                       android:textSize="13sp"
                       app:myFontStyle="nunito_sans_reguler"
                       />

                   <Space
                       android:layout_width="match_parent"
                       android:layout_height="8dp"/>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <id.dtech.cgo.CustomView.MyTextView
                           android:id="@+id/txtAdultPrice"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="IDR 430.000"
                           android:textSize="12sp"
                           android:textStyle="bold"
                           android:textColor="@color/bottom_text_selected"
                           app:myFontStyle="nunito_sans_bold"
                           />

                       <Space
                           android:layout_width="4dp"
                           android:layout_height="match_parent"/>

                       <id.dtech.cgo.CustomView.MyTextView
                           android:id="@+id/txtAdultPax"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="/ pax"
                           android:textSize="10sp"
                           app:myFontStyle="nunito_sans_reguler"
                           />

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:orientation="horizontal">

                       <ImageView
                           android:id="@+id/imgMerchant"
                           android:layout_width="26dp"
                           android:layout_height="12dp"
                           android:src="@drawable/example_asdp"
                           android:scaleType="centerCrop"
                           />

                       <Space
                           android:layout_width="16dp"
                           android:layout_height="match_parent"/>

                       <id.dtech.cgo.CustomView.MyTextView
                           android:id="@+id/txtMerchantName"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="ASDP"
                           android:textSize="13sp"
                           android:layout_weight="1"
                           android:layout_gravity="center_vertical"
                           android:maxLines="1"
                           app:myFontStyle="nunito_sans_reguler"
                           />

                   </LinearLayout>

                   <Space
                       android:layout_width="match_parent"
                       android:layout_height="8dp"/>

                   <id.dtech.cgo.CustomView.MyTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Children"
                       android:textSize="13sp"
                       app:myFontStyle="nunito_sans_reguler"
                       />

                   <Space
                       android:layout_width="match_parent"
                       android:layout_height="8dp"/>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <id.dtech.cgo.CustomView.MyTextView
                           android:id="@+id/txtChildrenPrice"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="IDR 230.000"
                           android:textSize="12sp"
                           android:textStyle="bold"
                           android:textColor="@color/bottom_text_selected"
                           app:myFontStyle="nunito_sans_bold"
                           />

                       <Space
                           android:layout_width="4dp"
                           android:layout_height="match_parent"/>

                       <id.dtech.cgo.CustomView.MyTextView
                           android:id="@+id/txtChildrenPax"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="/ pax"
                           android:textSize="10sp"
                           app:myFontStyle="nunito_sans_reguler"
                           />

                   </LinearLayout>

               </LinearLayout>

           </LinearLayout>

           <Button
               android:id="@+id/btnChange"
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:text="CHANGE"
               android:background="@drawable/background_change_rounded"
               android:layout_gravity="center_vertical"
               android:textColor="#143ABE"
               android:textSize="10sp"
               android:layout_marginRight="24dp"
               />

       </LinearLayout>

   </LinearLayout>

</androidx.cardview.widget.CardView>

  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:id="@+id/swipeRefresh"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_below="@id/cardHeader">

      <androidx.core.widget.NestedScrollView
          android:id="@+id/transportNestedScroll"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fillViewport="true"
          android:layout_below="@id/cardHeader">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <LinearLayout
                  android:id="@+id/linearContent"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

                  <id.dtech.cgo.CustomView.MyTextView
                      android:id="@+id/txtFound"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Found 10 departure transportation"
                      android:textSize="16sp"
                      android:layout_marginTop="24dp"
                      android:layout_marginLeft="24dp"
                      android:layout_marginRight="24dp"
                      app:myFontStyle="nunito_sans_reguler"
                      />

                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/rvResult"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:overScrollMode="never"
                      android:layout_marginBottom="100dp"
                      />

              </LinearLayout>

              <io.supercharge.shimmerlayout.ShimmerLayout
                  android:id="@+id/shimerLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:shimmer_animation_duration="1200"
                  android:layout_marginTop="24dp"
                  android:visibility="gone"
                  android:orientation="horizontal">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="150dp"
                              android:layout_marginLeft="24dp"
                              android:layout_marginRight="24dp"
                              android:background="@drawable/linear_rounded" />

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="24dp"
                              android:orientation="vertical">

                              <View
                                  android:layout_width="match_parent"
                                  android:layout_height="15dp"
                                  android:background="@drawable/rounded_view"
                                  android:layout_marginTop="8dp"
                                  android:layout_marginLeft="24dp"
                                  android:layout_marginRight="24dp"
                                  />

                              <View
                                  android:layout_width="match_parent"
                                  android:layout_height="15dp"
                                  android:background="@drawable/rounded_view"
                                  android:layout_marginTop="24dp"
                                  android:layout_marginLeft="24dp"
                                  android:layout_marginRight="24dp"
                                  />

                          </LinearLayout>

                      </LinearLayout>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="36dp"
                          android:layout_marginBottom="36dp"
                          android:orientation="vertical">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="150dp"
                              android:layout_marginLeft="24dp"
                              android:layout_marginRight="24dp"
                              android:background="@drawable/linear_rounded" />

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="24dp"
                              android:orientation="vertical">

                              <View
                                  android:layout_width="match_parent"
                                  android:layout_height="15dp"
                                  android:background="@drawable/rounded_view"
                                  android:layout_marginTop="8dp"
                                  android:layout_marginLeft="24dp"
                                  android:layout_marginRight="24dp"
                                  />

                              <View
                                  android:layout_width="match_parent"
                                  android:layout_height="15dp"
                                  android:background="@drawable/rounded_view"
                                  android:layout_marginTop="24dp"
                                  android:layout_marginLeft="24dp"
                                  android:layout_marginRight="24dp"
                                  />

                          </LinearLayout>

                      </LinearLayout>

                  </LinearLayout>

              </io.supercharge.shimmerlayout.ShimmerLayout>

              <LinearLayout
                  android:id="@+id/linearEmpty"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="75dp"
                  android:gravity="center_horizontal"
                  android:visibility="gone"
                  android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imgEmpty"
                      android:layout_width="237dp"
                      android:layout_height="209dp"
                      android:src="@drawable/person_empty_state"
                      android:scaleType="fitXY"
                      />

                  <id.dtech.cgo.CustomView.MyTextView
                      android:id="@+id/txtError1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Oops"
                      android:layout_gravity="center_horizontal"
                      android:textSize="24sp"
                      android:textColor="@color/bottom_text_selected"
                      app:myFontStyle="rubik_medium"
                      />

                  <Space
                      android:layout_width="match_parent"
                      android:layout_height="24dp"/>

                  <id.dtech.cgo.CustomView.MyTextView
                      android:id="@+id/txtError"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="No location found"
                      android:layout_gravity="center_horizontal"
                      android:textSize="16sp"
                      android:textColor="@color/profile_name"
                      android:gravity="center"
                      app:myFontStyle="rubik_medium"
                      android:lineSpacingExtra="6dp"
                      />

              </LinearLayout>

          </RelativeLayout>

      </androidx.core.widget.NestedScrollView>

  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearFilterBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="22dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

                <Space
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_filter"
                    android:layout_marginRight="5dp"
                    />

            </LinearLayout>

            <Space
                android:layout_width="11dp"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_color"
                />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/linearSortBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="22dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shorts"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

                <Space
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_short"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>