<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_blue_circle_full"
        android:layout_marginTop="4dp"
        />

    <Space
        android:layout_width="24dp"
        android:layout_height="match_parent"/>

    <id.dtech.cgo.CustomView.MyTextView
        android:id="@+id/txtCancelation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:myFontStyle="nunito_sans_reguler"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis vel malesuada odio, in dapibus orci. Aliquam nec lectus quis orci mattis fringilla."
        />

</LinearLayout>