<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="355dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="24dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/linearParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgImage"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:scaleType="centerCrop"
            android:background="@color/divider_color"
            />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="6dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvServiceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imgStar1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_empty"
                    />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/imgStar2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_empty"
                    />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/imgStar3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_empty"
                    />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/imgStar4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_empty"
                    />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/imgStar5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_empty"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text3"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Review"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rp 0/pax"
                android:gravity="end"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/bottom_text_selected"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>