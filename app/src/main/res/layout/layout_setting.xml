<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_rounded"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <id.dtech.cgo.CustomView.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/profile_name"
            android:text="PERMISSION NEEDED"
            android:textSize="16sp"
            android:layout_weight="1"
            app:myFontStyle="nunito_sans_bold"
            />

        <ImageView
            android:id="@+id/imgShareCLose"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_close_black"
            />

    </LinearLayout>

    <id.dtech.cgo.CustomView.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/profile_name"
        android:text="To continue, let your device turn on STORAGE in app permissions setting"
        android:textSize="16sp"
        app:myFontStyle="nunito_sans_bold"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="24dp"
        android:orientation="horizontal">

        <id.dtech.cgo.CustomView.MyTextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/search_color"
            android:text="CANCEL"
            android:textSize="16sp"
            app:myFontStyle="rubik_medium"
            />

        <Space
            android:layout_width="24dp"
            android:layout_height="wrap_content"/>

        <id.dtech.cgo.CustomView.MyTextView
            android:id="@+id/txtSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text4"
            android:text="SETTING"
            android:textSize="16sp"
            app:myFontStyle="rubik_medium"
            />

    </LinearLayout>

</LinearLayout>
