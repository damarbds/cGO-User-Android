<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgFerry"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:src="@drawable/example_asdp"
        android:scaleType="fitXY"
        />

    <Space
        android:layout_width="16dp"
        android:layout_height="match_parent"/>

    <id.dtech.cgo.CustomView.MyTextView
        android:id="@+id/txtFerryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ASDP"
        android:textSize="16sp"
        android:layout_weight="1"
        android:textColor="@color/profile_name"
        android:layout_gravity="center_vertical"
        app:myFontStyle="nunito_sans_semibold"
        />

    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_gray_blankcircle"
        />

</LinearLayout>