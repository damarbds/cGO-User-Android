<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:overScrollMode="never"
    tools:context=".View.FragmentFacilities">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="24dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:layout_marginLeft="24dp"
               android:layout_marginRight="24dp"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/imgMerchant"
                       android:layout_width="55dp"
                       android:layout_height="35dp"
                       android:src="@drawable/example_asdp"
                       android:scaleType="centerCrop"
                       />

                   <Space
                       android:layout_width="12dp"
                       android:layout_height="match_parent"/>

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtMerchant"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="ASDP"
                       android:layout_gravity="center_vertical"
                       android:textSize="16sp"
                       app:myFontStyle="nunito_sans_semibold"
                       android:textColor="#707070"
                       />

               </LinearLayout>

               <id.dtech.cgo.CustomView.MyTextView
                   android:id="@+id/txtClass"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Economy Class"
                   android:layout_gravity="center_vertical"
                   android:textSize="12sp"
                   android:layout_marginTop="12dp"
                   app:myFontStyle="nunito_sans_reguler"
                   android:textColor="#A6A6A6"
                   />

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvFacility"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="24dp"
                  android:overScrollMode="never" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="24dp"
           android:layout_marginBottom="24dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesification"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/profile_name"
                />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="24dp"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:orientation="horizontal">

                   <id.dtech.cgo.CustomView.MyTextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Max Capacity"
                       android:textColor="#4A4A4A"
                       app:myFontStyle="nunito_sans_reguler"
                       />

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtPassenger"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="40 Passengers"
                       android:textColor="#4A4A4A"
                       app:myFontStyle="nunito_sans_semibold"
                       />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="12dp"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:orientation="horizontal">

                   <id.dtech.cgo.CustomView.MyTextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Lenght"
                       android:textColor="#4A4A4A"
                       app:myFontStyle="nunito_sans_reguler"
                       />

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtLength"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="24.62 meters"
                       android:textColor="#4A4A4A"
                       app:myFontStyle="nunito_sans_semibold"
                       />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="12dp"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:orientation="horizontal">

                   <id.dtech.cgo.CustomView.MyTextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Draft"
                       android:textColor="#4A4A4A"
                       app:myFontStyle="nunito_sans_reguler"
                       />

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtWidth"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="1.8 Meters"
                       android:textColor="#4A4A4A"
                       app:myFontStyle="nunito_sans_semibold"
                       />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="12dp"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:layout_marginBottom="24dp"
                   android:orientation="horizontal">

                   <id.dtech.cgo.CustomView.MyTextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Machine"
                       android:textColor="#4A4A4A"
                       app:myFontStyle="nunito_sans_reguler"
                       />

                   <id.dtech.cgo.CustomView.MyTextView
                       android:id="@+id/txtMachine"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="107hp Yanmar"
                       android:textColor="#4A4A4A"
                       app:myFontStyle="nunito_sans_semibold"
                       />

               </LinearLayout>

           </LinearLayout>

       </androidx.cardview.widget.CardView>

   </LinearLayout>

</androidx.core.widget.NestedScrollView>