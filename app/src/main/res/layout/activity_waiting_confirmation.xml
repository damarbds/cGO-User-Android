<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.ActivityWaitingConfirmation">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:src="@drawable/left_arrow"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp">

                    <id.dtech.cgo.CustomView.MyTextView
                        android:id="@+id/txtWaiting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_complete_payment"
                        android:text="WAITING FOR GUIDE CONFIRMATION"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/profile_name"
                        app:myFontStyle="nunito_sans_semibold"
                        />

                    <LinearLayout
                        android:id="@+id/linearDP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <id.dtech.cgo.CustomView.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Down Payment"
                            android:textSize="15sp"
                            android:textColor="@color/profile_name"
                            app:myFontStyle="nunito_sans_reguler"
                            android:layout_marginTop="24dp"
                            />

                        <id.dtech.cgo.CustomView.MyTextView
                            android:id="@+id/txtDpPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="IDR 18.000.000"
                            android:textSize="15sp"
                            android:textColor="@color/profile_name"
                            app:myFontStyle="nunito_sans_bold"
                            android:layout_marginTop="12dp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/divider_color"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearRemaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <id.dtech.cgo.CustomView.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Remaining Payment"
                            android:textSize="15sp"
                            android:textColor="#3C7DF0"
                            app:myFontStyle="nunito_sans_reguler"
                            android:layout_marginTop="24dp"
                            />

                        <id.dtech.cgo.CustomView.MyTextView
                            android:id="@+id/txtRemainingPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="IDR 50.000.000"
                            android:textSize="20sp"
                            android:textColor="#3C7DF0"
                            app:myFontStyle="nunito_sans_bold"
                            android:layout_marginTop="12dp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/divider_color"
                            />

                    </LinearLayout>

                    <id.dtech.cgo.CustomView.MyTextView
                        android:id="@+id/txtBottomContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Please wait for your guide confirmation maximum within 24 hour. An email confirmation will be sent to your email"
                        android:textSize="15sp"
                        android:textColor="@color/profile_name"
                        app:myFontStyle="nunito_sans_reguler"
                        android:layout_marginTop="24dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sailing with Rising Fast Boat with Tropical Yacht Charters 2 Days 1 Night"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/profile_name"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/txtAddonName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ticket_only"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearMerchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/background_contact_details"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgMerchant"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/example_contact_img"
                        />

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/txtMerchantName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Details"
                            android:textSize="16sp"
                            android:textColor="@color/profile_name"
                            android:textStyle="bold"
                            />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="4dp"/>

                        <TextView
                            android:id="@+id/txtMerchantPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+62 856  219 2264"
                            android:textSize="14sp"
                            android:textColor="@color/profile_name"
                            />

                    </LinearLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_marginTop="36dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booking_detail"
                android:textSize="16sp"
                android:textColor="@color/profile_name"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/book_by"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_id"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/txtOrderID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/guest"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/txtGuest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_detail"
                android:textSize="16sp"
                android:textColor="@color/profile_name"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/payment"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/txtBankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/transfer_amount"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>