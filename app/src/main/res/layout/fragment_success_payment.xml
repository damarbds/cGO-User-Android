<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@drawable/background_success_payment"
    tools:context=".View.FragmentSuccessPayment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/payment_success"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:textSize="24sp"
           android:layout_marginTop="36dp"
           android:layout_gravity="center_horizontal"
           />

       <ImageView
           android:layout_width="155dp"
           android:layout_height="155dp"
           android:src="@drawable/ic_success_payment"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="32dp"
           />

       <TextView
           android:id="@+id/txtTitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Sailing with Rising Fast Boat with Tropical Yacht Charters 2 Days 1 Night"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:textSize="16sp"
           android:layout_marginTop="24dp"
           android:layout_marginLeft="24dp"
           android:layout_marginRight="24dp"
           android:gravity="center"
           android:lineSpacingExtra="6dp"
           android:layout_gravity="center_horizontal"
           />

       <LinearLayout
           android:id="@+id/linearOriginDestination"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="16dp"
           android:visibility="gone"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/txtSuccessOrigin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sanur Harbour"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:textSize="16sp"
               />

           <Space
               android:layout_width="8dp"
               android:layout_height="match_parent"/>

           <ImageView
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/ic_right_white"
               />

           <Space
               android:layout_width="8dp"
               android:layout_height="match_parent"/>

           <TextView
               android:id="@+id/txtSuccessDestination"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Labuan Bajo"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:textSize="16sp"
               />

       </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Total Payment"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:textSize="14sp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="24dp"
           />

       <TextView
           android:id="@+id/txtPaymentSuccessPrice"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="IDR 2.384.000"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:textSize="14sp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="4dp"
           />

       <TextView
           android:id="@+id/txtBookingConfirmation"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/booking_confirmation"
           android:textSize="14sp"
           android:textColor="@color/bottom_text_selected"
           android:layout_marginTop="24dp"
           android:background="@drawable/background_white_ticket"
           android:padding="24dp"
           android:layout_marginLeft="56dp"
           android:layout_marginRight="56dp"
           android:lineSpacingExtra="6dp"
           android:gravity="center"
           android:visibility="gone"
           />

       <carbon.widget.LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="85dp"
           android:layout_marginBottom="24dp"
           android:orientation="horizontal">

           <carbon.widget.RelativeLayout
               android:id="@+id/btnDetail"
               android:layout_width="match_parent"
               android:layout_height="55dp"
               android:layout_marginLeft="55dp"
               android:layout_marginRight="55dp"
               android:layout_marginBottom="12dp"
               android:layout_marginTop="12dp"
               android:background="#ffffff"
               app:carbon_cornerRadius="25dp"
               app:carbon_elevation="8dp"
               app:carbon_elevationShadowColor="@color/bottom_text_selected">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/see_details"
                   android:textSize="18sp"
                   android:textColor="@color/bottom_text_selected"
                   android:textStyle="bold"
                   android:layout_centerInParent="true"
                   android:textAllCaps="true"
                   />

           </carbon.widget.RelativeLayout>

       </carbon.widget.LinearLayout>

   </LinearLayout>

</androidx.core.widget.NestedScrollView>