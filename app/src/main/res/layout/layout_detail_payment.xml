<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <LinearLayout
            android:id="@+id/linearDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <id.dtech.cgo.CustomView.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:textColor="@color/profile_name"
                app:myFontStyle="nunito_sans_semibold"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <id.dtech.cgo.CustomView.MyTextView
                    android:id="@+id/txtDialogDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#292727"
                    app:myFontStyle="nunito_sans_semibold"
                    />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_black_dropdown"
                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                />

        </LinearLayout>

        <Space
            android:layout_width="24dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/linearGuest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <id.dtech.cgo.CustomView.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guest"
                android:textColor="@color/profile_name"
                app:myFontStyle="nunito_sans_semibold"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <id.dtech.cgo.CustomView.MyTextView
                    android:id="@+id/txtGuest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#292727"
                    app:myFontStyle="nunito_sans_semibold"
                    />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_black_dropdown"
                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                />

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrice"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="14sp"
                    android:textColor="@color/text6"
                    />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>

                <id.dtech.cgo.CustomView.MyTextView
                    android:id="@+id/txtDialogPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 2.430.000 / trip"
                    android:textColor="@color/pin_selected_color"
                    app:myFontStyle="nunito_sans_bold"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btnDialogBook"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_margin="24dp"
                android:text="@string/book"
                android:background="@drawable/background_bluerounded"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>